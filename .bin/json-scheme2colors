#!/usr/bin/env rc

## Example scheme
## {
##     'name': '',
##     'author': '',
##     'color': [
##         '#0e1618',
##         '#dc56d7',
##         '#169572',
##         '#169395',
##         '#5482bb',
##         '#6b4da2',
##         '#39dcc1',
##         '#d7f2f8',
##         '#031317',
##         '#d25dce',
##         '#30ba94',
##         '#47d0d2',
##         '#4070ab',
##         '#5d34a6',
##         '#59ebd3',
##         '#edf6f8'
##     ],
##     'foreground': '#d7f2f8',
##     'background': '#080c0d'
## }

colors=`{jq -r '[.foreground,.background]+.color|map(.[1:])|.[]'}
echo '#!/usr/bin/env rc'
echo 'export FOREGROUND='^$colors(1)
echo 'export BACKGROUND='^$colors(2)
echo ''
echo 'export BLACK='^$colors(3)
echo 'export RED='^$colors(4)
echo 'export GREEN='^$colors(5)
echo 'export YELLOW='^$colors(6)
echo 'export BLUE='^$colors(7)
echo 'export MAGENTA='^$colors(8)
echo 'export CYAN='^$colors(9)
echo 'export WHITE='^$colors(10)
echo ''
echo 'export BOLD_BLACK='^$colors(11)
echo 'export BOLD_RED='^$colors(12)
echo 'export BOLD_GREEN='^$colors(13)
echo 'export BOLD_YELLOW='^$colors(14)
echo 'export BOLD_BLUE='^$colors(15)
echo 'export BOLD_MAGENTA='^$colors(16)
echo 'export BOLD_CYAN='^$colors(17)
echo 'export BOLD_WHITE='^$colors(18)
echo ''
echo 'export CURSOR_COLOR=$YELLOW'
